generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guilds {
  guildId     String @id
  timeCreated String
}

model PredictionEntries {
  id                Int     @id @default(autoincrement())
  predictionId      String
  userId            String
  guildId           String
  predicted_outcome String
  decided_outcome   String?
  wageredPoints     Int
  earnedPoints      Int
  timeCreated       String
  timeEdited        String?
}

model Predictions {
  predictionId    String   @id
  guildId         String
  creatorId       String
  outcome_1       String
  outcome_2       String
  active          Boolean? @default(dbgenerated("'FALSE'"))
  decided_outcome String?
  timeCreated     String
  timeEnded       String?
}

model Users {
  id              Int    @id @default(autoincrement())
  userId          String
  guildId         String
  points          Int    @default(0)
  timeCreated     String
  lastEarnedPonts String @default("")
}
